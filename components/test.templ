package components

templ Home() {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<meta http-equiv="X-UA-Compatible" content="ie=edge"/>
			<title>AP</title>
			<script src="https://unpkg.com/htmx.org@2.0.3"></script>
            <script src="/assets/js/index.js"></script>
		</head>
		<body>
			<style>
                div {
                    padding: 1em;
                    max-width: 75%;
                    }
                .container {
                    align-items: center;
                    justify-content: center;
                    }
            </style>
			@Form()
		</body>
	</html>
}

templ Form() {
	<div class="container">
		<div class="item">
            <script>
                
            </script>
			<form hx-post="/api/html/message">
				<label for="message">Message:</label>
				<br/>
				<input type="text" id="message" name="message" style="height:200px;width:500px;"/>
				<br/>
				<button class="btn primary">Submit</button>
			</form>
		</div>
	</div>
}
